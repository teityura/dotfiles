# Prefix Key
#escape ^Jj
escape ^Bb
#escape ^Hh

# Character Code
defutf8 on
defencoding utf8
encoding utf8 utf8

# Scroll limit
defscrollback 10000

# Enable Mouse Scroll
termcapinfo xterm* ti@:te@

# Delete Buffer
altscreen on

# use bright colors for bold text.
attrcolor b ".I"

# enable background-color-erase setting
defbce on

# enable 256 color
termcapinfo xterm* 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# set statusbar
shelltitle "$ |bash"

# format
#hardstatus alwayslastline "%{= gk}[%m/%d %02c:%s] %{gk} %-w%{=u GK}%n %t%{-} %+w %=%{gk}%l"
hardstatus alwayslastline "%{= ck}[%m/%d %02c:%s] %{ck} %-w%{=u CK}%n %t%{-} %+w %=%{ck}%l"
#hardstatus alwayslastline "%{= yk}[%m/%d %02c:%s] %{yk} %-w%{=u YK}%n %t%{-} %+w %=%{yk}%l"
hardstatus off

# Default Shell
shell $SHELL
